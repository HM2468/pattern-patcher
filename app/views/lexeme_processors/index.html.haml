-# frozen_string_literal: true
-# app/views/lexeme_processors/index.html.haml
-# Fixed header + scrollable body + fixed pagination (like lexical_patterns/index)

%div{ class: "h-[85vh] overflow-hidden" }
  %div#lexeme_processors_panel{
    class: "repo-files-panel flex flex-col h-full overflow-hidden rounded-2xl bg-white shadow-sm"
  }

    -# ===== Fixed Header (NOT scroll) =====
    %div{ class: "text-gray-600 border-b border-gray-200" }
      %div{ class: "px-6 py-3 flex items-center justify-between gap-3" }
        %div{ class: "flex flex-col items-start text-left leading-tight min-w-0" }
          %div{ class: "text-lg font-semibold text-gray-900" } Processors

        %div{ class: "shrink-0 flex gap-2" }
          = link_to "New", new_lexeme_processor_path, class: "button-primary"

    -# ===== Scroll area: ONLY body scrolls =====
    %div#lexeme_processors_body_scroll{ class: "pp-scroll-gutter-stable flex-1 overflow-y-auto" }
      %div{ class: "px-6 py-4 space-y-4" }
        - if @lexeme_processors.blank?
          %div#lexeme_processors_empty_state
            .rounded-2xl.bg-gray-50.p-8.shadow-sm
              %div{ class: "text-sm text-gray-600" }
                No processors yet. Create your first processor to start processing.
        - else
          .rounded-2xl.bg-white.shadow-sm.overflow-hidden
            %table{ class: "w-full text-sm" }
              %thead{ class: "bg-indigo-100 text-gray-600" }
                %tr
                  %th{ class: "px-4 py-3 text-left font-medium" } Name
                  %th{ class: "px-4 py-3 text-left font-medium" } Key
                  %th{ class: "px-4 py-3 text-left font-medium" } Entrypoint
                  %th{ class: "px-4 py-3 text-left font-medium" } Enabled
                  %th{ class: "pl-4 pr-8 py-3 text-right font-medium" } Actions

              %tbody{ id: "lexeme_processors_tbody", class: "divide-y divide-gray-300" }
                - @lexeme_processors.each do |processor|
                  = render "row", processor: processor

          %div#lexeme_processors_empty_state{ class: "hidden" }

    -# ===== Fixed Footer Pagination =====
    %div{ class: "repo-files-pagination sticky bottom-0 z-10 bg-white border-t border-gray-200" }
      %div{ class: "px-6 py-3" }
        - if @lexeme_processors.any?
          = render "shared/pagination", collection: @lexeme_processors