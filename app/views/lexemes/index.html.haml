-# frozen_string_literal: true
-# app/views/lexemes/index.html.haml

- current_status = (@status.presence || "pending").to_s
- status_options = [["Pending (#{@pending_count})", "pending"], ["Processed (#{@processed_count})", "processed"], ["Ignored (#{@ignored_count})", "ignored"], ["Failed (#{@failed_count})", "failed"]]
- filter_type = (params[:filter_type].presence || (params[:path_filter].present? ? "file_path" : "lexeme_text")).to_s
- input_value = (filter_type == "file_path" ? params[:path_filter].to_s : params[:text_filter].to_s)
- pagination_options = { status: params[:status], text_filter: params[:text_filter], path_filter: params[:path_filter], filter_type: params[:filter_type] }

%div{ class: "h-full overflow-hidden" }
  %div#lexemes_panel{ class: "flex flex-col h-full overflow-hidden rounded-2xl" }

    -# ===== Fixed Header (NOT scroll) =====
    %div{ class: "bg-indigo-100 text-gray-600 border-b border-gray-100 mx-5 rounded-2xl" }
      %div{ class: "px-6 py-3 flex items-center justify-left gap-3" }
        %div{ class: "flex flex-col items-start text-left leading-tight min-w-0" }
          %div{ class: "text-lg font-semibold text-gray-900" } Lexemes

        -# ===== Status dropdown =====
        = form_with url: lexemes_path, method: :get, local: true, data: { turbo: false }, class: "inline-flex items-center" do
          = hidden_field_tag :page, nil
          = hidden_field_tag :text_filter, params[:text_filter]
          = hidden_field_tag :path_filter, params[:path_filter]
          = hidden_field_tag :filter_type, params[:filter_type]
          %div{ class: "inline-flex items-center gap-2 rounded-md bg-white px-2.5 py-1 shadow-sm ring-1 ring-gray-200 hover:ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-500" }
            %span{ class: "font-mono text-xs text-gray-600" }
            = select_tag :status,
              options_for_select(status_options, current_status),
              class: "font-mono text-xs text-gray-900 bg-transparent border-0 p-0 pr-6 focus:ring-0 focus:outline-none cursor-pointer",
              onchange: "this.form.submit()"

        -# ===== Filter type dropdown + input (live search) =====
        %div{ class: "inline-flex items-center gap-2" }
          = form_with url: lexemes_path, method: :get, local: true, data: { turbo: false }, class: "inline-flex items-center gap-2" do
            = hidden_field_tag :status, params[:status]
            = hidden_field_tag :page, nil

            %div{ class: "inline-flex items-center gap-2 rounded-md bg-white px-2.5 py-1 shadow-sm ring-1 ring-gray-200 hover:ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-500" }
              = select_tag :filter_type,
                options_for_select([["Lexeme context", "lexeme_text"], ["File path", "file_path"]], filter_type),
                class: "font-mono text-xs text-gray-900 bg-transparent border-0 p-0 pr-6 focus:ring-0 focus:outline-none cursor-pointer",
                onchange: "var f=this.form; if(this.value==='lexeme_text'){f.querySelector('input[name=text_filter]').disabled=false; f.querySelector('input[name=path_filter]').value='';} else {f.querySelector('input[name=path_filter]').disabled=false; f.querySelector('input[name=text_filter]').value='';} f.submit();"

            -# NOTE: 两个 input 都存在，靠 disabled/清空来保证只传一个
            = text_field_tag :text_filter, (filter_type == "lexeme_text" ? input_value : ""),
              class: "hidden"

            = text_field_tag :path_filter, (filter_type == "file_path" ? input_value : ""),
              class: "hidden"

          %input{
            type: "text",
            value: input_value,
            placeholder: (filter_type == "file_path" ? "Search file path..." : "Search lexeme context..."),
            class: "w-[22rem] rounded-md bg-white px-3 py-1 font-mono text-xs text-gray-900 shadow-sm ring-1 ring-gray-200 hover:ring-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500",
            data: {
              controller: "live-search",
              "live-search-delay-value": 600,
              "live-search-url-template-value": lexemes_path(status: params[:status], filter_type: filter_type),
              "live-search-param-name-value": (filter_type == "file_path" ? "path_filter" : "text_filter"),
              "live-search-frame-id-value": "processor_right",
              "live-search-min-length-value": 0
            }
          }

    -# ===== Scroll area: ONLY body scrolls =====
    %div#lexemes_body_scroll{ class: "pp-scroll-gutter-stable flex-1 overflow-y-auto" }
      %div{ class: "px-6 py-4 space-y-4" }

        - if !defined?(@lexemes) || @lexemes.blank?
          %div#lexemes_empty_state
            .rounded-2xl.bg-gray-50.p-8.shadow-sm
              %div{ class: "text-sm text-gray-600" }
                No lexemes found.
        - else
          %table{ class: "w-full table-fixed text-sm" }
            %thead
              %tr{ class: "bg-gray-50 text-gray-600" }
                %th{ class: "w-20 px-4 py-2 text-left font-semibold" } ID
                %th{ class: "px-4 py-2 text-left font-semibold" } Source text and Normalized text
                %th{ class: "w-40 px-4 py-2 text-left font-semibold" } Metadata
                %th{ class: "w-80 px-4 py-2 text-left font-semibold" } Occurrences
                %th{ class: "w-20 px-4 py-2 text-left font-semibold" } Actions
            %tbody{ id: "lexemes_tbody", class: "divide-y divide-gray-200" }
              - @lexemes.each do |lexeme|
                = render "row", lexeme: lexeme

    -# ===== Fixed Footer Pagination =====
    %div{ class: "sticky bottom-0" }
      - if defined?(@lexemes) && @lexemes.respond_to?(:current_page) && @lexemes.any?
        = render "shared/pagination", collection: @lexemes, options: pagination_options