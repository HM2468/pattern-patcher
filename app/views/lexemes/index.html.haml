- if defined?(@lexemes) && @lexemes.present?
  %div{ class: "rounded-2xl bg-gray-50 p-4 shadow-sm" }
    %div{ class: "overflow-x-auto" }
      %table{ class: "min-w-full text-sm" }
        %thead
          %tr{ class: "text-left text-gray-600" }
            %th{ class: "py-2 pr-4" } ID
            %th{ class: "py-2 pr-4" } fingerprint
            %th{ class: "py-2 pr-4" } process_status
            %th{ class: "py-2 pr-0" } processed_at
        %tbody
          - @lexemes.limit(50).each do |lx|
            %tr{ class: "border-t border-gray-200" }
              %td{ class: "py-2 pr-4 font-mono" }= lx.id
              %td{ class: "py-2 pr-4 font-mono text-gray-700" }= lx.fingerprint
              %td{ class: "py-2 pr-4" }= lx.process_status
              %td{ class: "py-2 pr-0 text-gray-700" }= lx.processed_at&.strftime("%Y-%m-%d %H:%M:%S")
- else
  %div{ class: "rounded-xl bg-gray-50 p-6 text-gray-600" } No lexemes found.