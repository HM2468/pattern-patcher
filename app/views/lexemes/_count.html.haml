-# frozen_string_literal: true
-# app/views/lexemes/_count.html.haml
-# Left sidebar card: Lexeme Counts

= turbo_frame_tag "lexeme_count" do
  %div{ class: "rounded-2xl border border-indigo-200 bg-white shadow-sm overflow-hidden" }
    %div{ class: "bg-indigo-100 px-4 py-3 flex items-start justify-between gap-3" }
      %div{ class: "min-w-0" }
        %div{ class: "text-sm font-semibold text-gray-900 truncate" }
          All Lexemes

      %div{ class: "shrink-0 flex items-center gap-2" }
        = link_to lexemes_path,
          class: "icon-button",
          data: tooltip_data(tip: "All lexemes", turbo_frame: "processor_right") do
          = svg_icon("arrow-uturn-right", class_name: "w-6 h-6")

    %div{ class: "px-2 py-2" }
      %div.repo-meta-block
        %div.repo-meta-value{ title: @lexeme_count }
          = link_to lexemes_path,
            data: { turbo_frame: "processor_right" },
            class: "repo-stat-card" do
            %div.repo-stat-value= @lexeme_count