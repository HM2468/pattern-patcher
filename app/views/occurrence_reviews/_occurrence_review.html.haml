%div{ class: "rounded-2xl bg-gray-50 p-4 shadow-sm" }
  %div{ class: "overflow-x-auto" }
    %table{ class: "min-w-full text-sm" }
      %tbody
        %tr{ class: "border-t border-gray-200" }
          %td{ class: "py-2 pr-4 font-mono" }= occurrence_review.occurrence.matched_text
          %td{ class: "py-2 pr-4 font-mono text-gray-700" }= occurrence_review.rendered_code
          %td{ class: "py-2 pr-0 text-gray-700" }= occurrence_review.status