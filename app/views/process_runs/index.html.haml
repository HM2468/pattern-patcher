-# frozen_string_literal: true
-# app/views/process_runs/index.html.haml

%div{ class: "max-w-6xl mx-auto h-[85vh] overflow-hidden" }
  %div#process_runs_panel{
    class: "repo-files-panel flex flex-col h-full overflow-hidden rounded-2xl bg-white shadow-sm"
  }

    -# ===== Fixed Header (NOT scroll) =====
    %div{ class: "text-gray-600 border-b border-gray-200" }
      %div{ class: "px-6 py-3 flex items-center justify-between gap-3" }
        %div{ class: "flex flex-col items-start text-left leading-tight min-w-0" }
          %div{ class: "text-lg font-semibold text-gray-900" }
            Process Runs
        %div{ class: "shrink-0" }
          = link_to lexeme_processors_path,
            class: "icon-button",
            data: tooltip_data(tip: "Back") do
            = svg_icon("arrow-uturn-left", class_name: "w-6 h-6")

    -# ===== Scroll area: ONLY body scrolls =====
    %div#process_runs_body_scroll{
      class: "pp-scroll-gutter-stable flex-1 overflow-y-auto",
      data: {
        controller: "process-runs",
        process_runs_channel_value: "ProcessRunsChannel"
      }
    }
      %div{ class: "px-6 py-4 space-y-3" }
        - if @process_runs.blank?
          %div{ class: "rounded-xl bg-gray-50 p-6 text-gray-600" } No process runs found.
        - else
          - @process_runs.each do |pr|
            - progress = (@progress_by_id[pr.id] || {})
            = render partial: "process_run", locals: { process_run: pr, progress: progress }

    -# ===== Fixed Footer Pagination =====
    %div{ class: "repo-files-pagination sticky bottom-0 z-10 bg-white border-t border-gray-200" }
      %div{ class: "px-6 py-3" }
        = render "shared/pagination", collection: @process_runs