-# app/views/scan_runs/scanned_occurrences.html.haml

-# --- inline helper: escape + highlight matched_text inside context (supports multiple matches) ---
%div{ class: "max-w-6xl mx-auto p-6 space-y-4" }
  %div{ class: "flex items-center justify-between" }
    %div
      %div{ class: "text-lg font-semibold" } Scanned Occurrences
      %div{ class: "text-sm text-gray-600" }
        ScanRun:
        %span{ class: "font-mono" }= @scan_run.id
    %div{ class: "flex items-center gap-2" }
      = link_to "Back", scan_runs_path, class: "button-secondary"

  -# --- GitHub-ish line styles (inline, no extra CSS file needed) ---
  :css
    /* container like GitHub diff block */
    .pp-diff {
      border: 1px solid rgb(208, 215, 222);
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
    }
    .pp-file-head {
      background: rgb(246, 248, 250);
      border-bottom: 1px solid rgb(208, 215, 222);
      padding: 6px 10px;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 12px;
      color: rgb(31, 35, 40);
    }
    .pp-row {
      display: grid;
      grid-template-columns: 50px 1fr;
      align-items: stretch;
      border-top: 1px solid rgb(240, 246, 252);
    }
    .pp-row:first-child { border-top: none; }
    .pp-lno {
      background: rgb(240, 246, 252);
      color: rgb(99, 110, 123);
      text-align: right;
      padding: 2px 6px;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 12px;
      line-height: 12px;
      user-select: none;
      border-right: 1px solid rgb(208, 215, 222);
    }
    /* "added line" vibe */
    .pp-code {
      background: rgb(230, 255, 237);
      color: rgb(31, 35, 40);
      padding: 2px 10px;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 12px;
      line-height: 12px;
      white-space: pre-wrap;
      word-break: break-word;
    }
    /* highlight matched_text inside the line */
    .pp-match-hi {
      background: rgb(172, 242, 190); /* stronger green */
      color: rgb(0, 0, 0);
      border-radius: 4px;
      padding: 0 2px;
    }

  - if @occurrences.blank?
    %div{ class: "rounded-xl bg-gray-50 p-6 text-gray-600" } No occurrences found.
  - else
    %div{ class: "space-y-4" }
      - @occurrences.each do |occ|
        %div{ class: "pp-diff" }
          %div{ class: "pp-file-head" }
            = occ.repository_file&.path.to_s

          -# Only show the matched line (context is full line)
          %div{ class: "pp-row" }
            %div{ class: "pp-lno" }= occ.line_at
            %div{ class: "pp-code" }
              -# safe: we escape first, then inject highlight spans
              = highlight_context(occ.context, occ.matched_text).html_safe

    = render "shared/pagination", collection: @occurrences